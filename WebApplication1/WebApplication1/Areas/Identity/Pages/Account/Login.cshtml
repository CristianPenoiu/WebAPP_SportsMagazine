@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="~/styles/login.css" rel="stylesheet" />

<div class="login-container">
    <div class="login-section">
        <h1>@ViewData["Title"]</h1>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Model.ErrorMessage
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <form id="account" method="post" class="form-horizontal">
            <h2>Use a local account to log in.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            <div class="login-links">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
        @if (Model.ExternalLogins?.Count > 0 || true)  // Schimbat pentru a afișa întotdeauna secțiunea
        {
            <section>
                <h3>Use another service to log in.</h3>
                <hr />
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="social-login">
                        @if (Model.ExternalLogins?.Count > 0)
                        {
                            foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-info" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    Log in using @provider.DisplayName
                                </button>
                            }
                        }
                        else
                        {
                            <p>No external authentication services are configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a> about setting up this ASP.NET application to support logging in via external services.</p>
                        }
                    </div>
                </form>
            </section>
        }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
